generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id          String      @id @default(uuid())
  name        String?
  role        Role
  email       String?     @unique
  password    String
  assignments Assignment[]
}

model Assignment {
  id         String   @id @default(uuid())
  link       String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}